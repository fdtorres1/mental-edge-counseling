---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import Footer from '../../components/Footer';
import TherapistCard from '../../components/TherapistCard';
---

<BaseLayout 
  title="Nathan Lagacy, LCPC, CMPC" 
  description="Nathan Lagacy is a Licensed Clinical Professional Counselor and Certified Mental Performance Consultant at Mental Edge Counseling LLC, specializing in mental health treatment and sports psychology."
>
  <Navigation client:load />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 hover:text-primary-700 mb-6 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Our Team
          </a>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Nathan Lagacy
          </h1>
          <p class="text-xl text-primary-600 font-semibold">
            Licensed Clinical Professional Counselor (LCPC)<br />
            Certified Mental Performance Consultant (CMPC)
          </p>
        </div>
      </div>
    </section>

    <!-- Therapist Details -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <TherapistCard
          client:load
          name="Nathan Lagacy"
          credentials="LCPC, CMPC"
          image="/images/therapists/nathan-lagacy.jpg"
          specialties={[
            'Depression',
            'Anxiety',
            'Schizophrenia',
            'PTSD',
            'ADHD',
            'Mental Performance',
            'Sports Psychology'
          ]}
          description="Nathan Lagacy is a Licensed Clinical Professional Counselor and Certified Mental Performance Consultant. He works with individuals suffering from depression, anxiety, schizophrenia, PTSD, ADHD, and more. Nathan also provides mental performance consulting to athletes and performers, helping them develop the mental skills needed to excel in their fields. With a strong background in sports and a belief in health and wellness, Nathan takes a holistic approach to mental health and performance."
          objectPosition="center 0%"
        />
      </div>
    </section>

    <!-- Additional Information -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Areas of Expertise</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Mental Health Counseling</h3>
            <p class="text-gray-700">
              Nathan provides comprehensive mental health treatment for a wide range of conditions including 
              depression, anxiety disorders, schizophrenia, PTSD, and ADHD. He uses evidence-based therapeutic 
              approaches tailored to each individual's unique needs.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Mental Performance Consulting</h3>
            <p class="text-gray-700">
              As a Certified Mental Performance Consultant, Nathan helps athletes and performers develop 
              essential mental skills including goal setting, focus, relaxation techniques, motivation strategies, 
              and managing pressure. He also supports injury recovery and rehabilitation.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-primary-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-primary-100">
          Contact us to schedule an appointment with Nathan or learn more about our services.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg"
          >
            Contact Us
          </a>
          <a
            href="/services"
            class="bg-primary-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-800 transition-colors shadow-lg border-2 border-white"
          >
            View Services
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</BaseLayout>

