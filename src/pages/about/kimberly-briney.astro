---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation';
import Footer from '../../components/Footer';
import TherapistCard from '../../components/TherapistCard';
---

<BaseLayout 
  title="Kimberly Briney, Psy.D., RDDP" 
  description="Kimberly Briney is a Licensed Clinical Psychologist with 22 years of experience at Mental Edge Counseling LLC, specializing in trauma-informed care, co-occurring disorders, and performance coaching."
>
  <Navigation client:load />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 hover:text-primary-700 mb-6 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Our Team
          </a>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
            Kimberly Briney
          </h1>
          <p class="text-xl text-primary-600 font-semibold">
            Licensed Clinical Psychologist (Psy.D.)<br />
            Registered Dual Disorder Professional (RDDP)
          </p>
        </div>
      </div>
    </section>

    <!-- Therapist Details -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <TherapistCard
          client:load
          name="Kimberly Briney"
          credentials="Psy.D., RDDP"
          image="/images/therapists/kimberly-briney.jpg"
          specialties={[
            'Depression',
            'Bipolar Disorder',
            'Anxiety',
            'PTSD',
            'Anger Management',
            'Relationship Issues',
            'Personality Disorders',
            'Trauma-Informed Care',
            'Co-occurring Disorders',
            'Performance Coaching'
          ]}
          description="Kimberly Briney is a Licensed Clinical Psychologist with 22 years of experience in the field. She specializes in treating depression, bipolar disorder, anxiety, PTSD, anger issues, relationship issues, and personality disorders. Kimberly has extensive expertise in trauma-informed and gender-responsive treatment, as well as co-occurring disorders. She also provides performance coaching to help clients achieve their personal and professional goals."
        />
      </div>
    </section>

    <!-- Additional Information -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Areas of Expertise</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Clinical Psychology</h3>
            <p class="text-gray-700">
              With over two decades of experience, Kimberly provides comprehensive treatment for depression, 
              bipolar disorder, anxiety, PTSD, anger management, relationship issues, and personality disorders. 
              Her approach is grounded in evidence-based practices and personalized care.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-md">
            <h3 class="text-xl font-semibold text-gray-900 mb-3">Specialized Treatment</h3>
            <p class="text-gray-700">
              Kimberly has extensive expertise in trauma-informed and gender-responsive treatment, as well as 
              co-occurring disorders. She also offers performance coaching to help clients achieve their 
              personal and professional goals through evidence-based strategies.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-primary-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Ready to Get Started?</h2>
        <p class="text-xl mb-8 text-primary-100">
          Contact us to schedule an appointment with Kimberly or learn more about our services.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="bg-white text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors shadow-lg"
          >
            Contact Us
          </a>
          <a
            href="/services"
            class="bg-primary-700 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-800 transition-colors shadow-lg border-2 border-white"
          >
            View Services
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</BaseLayout>

