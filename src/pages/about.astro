---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import TherapistCard from '../components/TherapistCard';
---

<BaseLayout 
  title="About Us" 
  description="Meet our team of licensed mental health professionals at Mental Edge Counseling LLC - Nathan Lagacy, Kimberly Briney, and Eduardo Castillo."
>
  <Navigation client:load />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-4">
          About Our Team
        </h1>
        <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto">
          Our experienced counselors are dedicated to helping you achieve your mental health and performance goals.
        </p>
      </div>
    </section>

    <!-- Therapists Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-12">
          <!-- Nathan Lagacy -->
          <div>
            <TherapistCard
              client:load
              name="Nathan Lagacy"
              credentials="LCPC, CMPC"
              image="/images/therapists/nathan-lagacy.jpg"
              specialties={[
                'Depression',
                'Anxiety',
                'Schizophrenia',
                'PTSD',
                'ADHD',
                'Mental Performance',
                'Sports Psychology'
              ]}
              description="Nathan Lagacy is a Licensed Clinical Professional Counselor and Certified Mental Performance Consultant. He works with individuals suffering from depression, anxiety, schizophrenia, PTSD, ADHD, and more. Nathan also provides mental performance consulting to athletes and performers, helping them develop the mental skills needed to excel in their fields. With a strong background in sports and a belief in health and wellness, Nathan takes a holistic approach to mental health and performance."
            />
          </div>

          <!-- Kimberly Briney -->
          <div>
            <TherapistCard
              client:load
              name="Kimberly Briney"
              credentials="Psy.D., RDDP"
              image="/images/therapists/kimberly-briney.jpg"
              specialties={[
                'Depression',
                'Bipolar Disorder',
                'Anxiety',
                'PTSD',
                'Anger Management',
                'Relationship Issues',
                'Personality Disorders',
                'Trauma-Informed Care',
                'Co-occurring Disorders',
                'Performance Coaching'
              ]}
              description="Kimberly Briney is a Licensed Clinical Psychologist with 22 years of experience in the field. She specializes in treating depression, bipolar disorder, anxiety, PTSD, anger issues, relationship issues, and personality disorders. Kimberly has extensive expertise in trauma-informed and gender-responsive treatment, as well as co-occurring disorders. She also provides performance coaching to help clients achieve their personal and professional goals."
            />
          </div>

          <!-- Eduardo Castillo -->
          <div>
            <TherapistCard
              client:load
              name="Eduardo Castillo"
              credentials="LPC"
              image="/images/therapists/eduardo-castillo.jpg"
              specialties={[
                'CBT',
                'ACT',
                'DBT',
                'REBT',
                'Depression',
                'Anxiety',
                'Grief',
                'Emotional Dysregulation',
                'School Stress',
                'Sports Psychology',
                'Bilingual (English/Spanish)'
              ]}
              description="Eduardo Castillo is a bilingual (English/Spanish) Licensed Professional Counselor who holds master's degrees in Clinical Mental Health Counseling and Sport & Human Performance. He specializes in Cognitive Behavioral Therapy (CBT), Acceptance and Commitment Therapy (ACT), Dialectical Behavior Therapy (DBT), and Rational Emotive Behavior Therapy (REBT). Eduardo works with adults and adolescents on issues including depression, anxiety, grief, emotional dysregulation, and school stress. He also offers psychological skills training to athletes, focusing on emotional regulation, stress and energy management, motivation, and performance optimization."
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Statement -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mission</h2>
        <p class="text-xl text-gray-700 leading-relaxed">
          At Mental Edge Counseling LLC, we are committed to helping people reach their full potential 
          and live life to the fullest. Through evidence-based therapeutic approaches and personalized care, 
          we support our clients in overcoming challenges, building resilience, and achieving their goals.
        </p>
      </div>
    </section>
  </main>

  <Footer client:load />
</BaseLayout>

