---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import TherapistPreviewCard from '../components/TherapistPreviewCard';
---

<BaseLayout 
  title="About Us" 
  description="Meet our team of licensed mental health professionals at Mental Edge Counseling LLC - Nathan Lagacy, Kimberly Briney, and Eduardo Castillo."
>
  <Navigation client:load />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-4">
          About Our Team
        </h1>
        <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto">
          Our experienced counselors are dedicated to helping you achieve your mental health and performance goals.
        </p>
      </div>
    </section>

    <!-- Therapists Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Nathan Lagacy -->
          <TherapistPreviewCard
            client:load
            name="Nathan Lagacy"
            credentials="LCPC, CMPC"
            image="/images/therapists/nathan-lagacy.jpg"
            briefBio="Licensed Clinical Professional Counselor and Certified Mental Performance Consultant specializing in mental health treatment and sports psychology."
            slug="nathan-lagacy"
            objectPosition="center 0%"
          />

          <!-- Kimberly Briney -->
          <TherapistPreviewCard
            client:load
            name="Kimberly Briney"
            credentials="Psy.D., RDDP"
            image="/images/therapists/kimberly-briney.jpg"
            briefBio="Licensed Clinical Psychologist with 22 years of experience in trauma-informed care, co-occurring disorders, and performance coaching."
            slug="kimberly-briney"
            objectPosition="center 35%"
          />

          <!-- Eduardo Castillo -->
          <TherapistPreviewCard
            client:load
            name="Eduardo Castillo"
            credentials="LPC"
            image="/images/therapists/eduardo-castillo.jpg"
            briefBio="Bilingual Licensed Professional Counselor specializing in CBT, ACT, DBT, and REBT for adults, adolescents, and athletes."
            slug="eduardo-castillo"
            objectPosition="90% center"
          />
        </div>
      </div>
    </section>

    <!-- Mission Statement -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Mission</h2>
        <p class="text-xl text-gray-700 leading-relaxed">
          At Mental Edge Counseling LLC, we are committed to helping people reach their full potential 
          and live life to the fullest. Through evidence-based therapeutic approaches and personalized care, 
          we support our clients in overcoming challenges, building resilience, and achieving their goals.
        </p>
      </div>
    </section>
  </main>

  <Footer client:load />
</BaseLayout>

