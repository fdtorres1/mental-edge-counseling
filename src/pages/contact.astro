---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation';
import Footer from '../components/Footer';
import ContactForm from '../components/ContactForm';
---

<BaseLayout 
  title="Contact Us" 
  description="Contact Mental Edge Counseling LLC in Mokena, IL. Schedule an appointment or reach out with questions. Located near the Mokena Metra stop."
>
  <Navigation client:load />
  
  <main>
    <!-- Page Header -->
    <section class="bg-gradient-to-br from-primary-50 to-secondary-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 text-center mb-4">
          Contact Us
        </h1>
        <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto">
          We're here to help. Reach out to schedule an appointment or ask any questions.
        </p>
      </div>
    </section>

    <!-- Contact Form and Info Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
            <p class="text-gray-700 mb-8">
              Fill out the form below and we'll get back to you as soon as possible. 
              You can also call us directly at{' '}
              <a href="tel:8152771092" class="text-primary-600 font-semibold hover:underline">
                815-277-1092
              </a>.
            </p>
            <ContactForm client:load />
          </div>

          <!-- Contact Information -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Office Information</h2>
            
            <div class="space-y-6 mb-8">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 flex items-center">
                  <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Address
                </h3>
                <p class="text-gray-700">
                  11106 Front Street<br />
                  Mokena, IL 60448
                </p>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 flex items-center">
                  <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  Phone
                </h3>
                <p class="text-gray-700">
                  <a href="tel:8152771092" class="text-primary-600 hover:underline font-medium">
                    815-277-1092
                  </a>
                </p>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-2 flex items-center">
                  <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Email
                </h3>
                <p class="text-gray-700">
                  <a 
                    href="mailto:mentaledgecounseling@gmail.com" 
                    class="text-primary-600 hover:underline font-medium"
                  >
                    mentaledgecounseling@gmail.com
                  </a>
                </p>
              </div>
            </div>

            <div class="bg-primary-50 rounded-lg p-6 mb-8">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">Transportation</h3>
              <p class="text-gray-700 text-sm">
                Our office is conveniently located within easy walking distance from the{' '}
                <strong>Mokena Metra stop</strong> on the{' '}
                <strong>Rock Island District Line</strong>. Public transportation makes it easy to reach us.
              </p>
            </div>

            <div class="bg-blue-50 border-l-4 border-blue-500 p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-2">COVID-19 Update</h3>
              <p class="text-gray-700 text-sm">
                Sessions are currently offered remotely via video or phone to ensure the safety 
                of our clients and staff. Please contact us to schedule a remote session.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Google Maps Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Find Us</h2>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="aspect-w-16 aspect-h-9 h-96">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2978.1234567890123!2d-87.885123!3d41.526789!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDHCsDMxJzM2LjQiTiA4N8KwNTMnMDYuNCJX!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
              width="100%"
              height="100%"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Mental Edge Counseling LLC Location"
              class="w-full h-full"
            ></iframe>
          </div>
          <div class="p-6 bg-white">
            <p class="text-gray-700 text-center">
              <strong>11106 Front Street, Mokena, IL 60448</strong>
            </p>
            <p class="text-sm text-gray-600 text-center mt-2">
              Easy walk from the Mokena Metra stop (Rock Island District Line)
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer client:load />
</BaseLayout>

